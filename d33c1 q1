#include <stdio.h>

int main() {
    int n, i, key, mid, low, high;
    int arr[100];

    printf("Enter how many elements: ");
    scanf("%d", &n);

    printf("Enter %d elements in sorted order:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter element to search: ");
    scanf("%d", &key);

    low = 0;
    high = n - 1;

    while(low <= high) {
        mid = (low + high) / 2;

        if(arr[mid] == key) {
            printf("Element found at index %d\n", mid);
            return 0;
        }

        if(key > arr[mid])
            low = mid + 1;
        else
            high = mid - 1;
    }

    printf("Element not found\n");

    return 0;
}

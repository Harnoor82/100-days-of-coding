#include <stdio.h>

int main() {

    for (int i = 1; i <= 7; i += 2) {

        for (int s = 7; s > i; s -= 2) {
            printf(" ");
        }

        for (int j = 1; j <= i; j++) {
            printf("*");
        }

        printf("\n");
    }

    for (int i = 5; i >= 1; i -= 2) {

        for (int s = 7; s > i; s -= 2) {
            printf(" ");
        }

        for (int j = 1; j <= i; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
